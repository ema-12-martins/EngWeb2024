extends layout 

block content
    .w3-card-4
        h1 
            span Lista de Compositores 
            a.w3-btn.w3-round.w3-grey(href="compositores/registo") +
    
    .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Alteracoes
                each compositor in compositores
                    tr 
                        td
                            a(href="/compositores/"+compositor.id) #{compositor.nome}
                        td
                            span [
                                a(href="/compositores/editar/"+compositor.id) Editar
                            span ]
                            span [
                                a(href="/compositores/eliminar/"+compositor.id) Eliminar
                            span ]

    footer.w3-container.w3-grey
