extends layout 

block content
    .w3-card-4
        h1 
            span Lista de Compositores 
            a.w3-btn.w3-round.w3-grey(href="compositores/registo") +
    
    .w3-container
            table.w3-table-all
                tr
                    th Nome
                    th Bio 
                    th Data de Nascimento
                    th Data de Obito
                    th Periodo Musical
                    th Alteracoes
                each compositor in compositores
                    tr 
                        td= compositor.nome
                        td= compositor.bio 
                        td= compositor.dataNasc 
                        td= compositor.dataObito
                        td= compositor.periodo
                        td
                            span [
                                a(href="/compositores/editar/"+compositor.id) Editar
                            span ]

    footer.w3-container.w3-grey
